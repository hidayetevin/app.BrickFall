{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "strict": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        /* Path Aliases */
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@scenes/*": [
                "./src/scenes/*"
            ],
            "@systems/*": [
                "./src/systems/*"
            ],
            "@entities/*": [
                "./src/entities/*"
            ],
            "@ui/*": [
                "./src/ui/*"
            ],
            "@config/*": [
                "./src/config/*"
            ],
            "@types/*": [
                "./src/types/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}